Fungsi aksi1(label1, masuk1) {
  kata1 = teks_label label1
  tulis "label => ", kata1, "\n"

  set_label label1, "rubah label"

  kata2 = teks_masukan masuk1
  tulis "masukan => ", kata2, "\n"

  set_masukan masuk1, "rubah masukan"
}



